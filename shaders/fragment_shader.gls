#version 410

uniform sampler2D		tex;

in float				ored;
in float				ogreen;
in float				oblue;

out vec4				outputColor;

void main(void)
{
	outputColor = texture(tex, gl_PointCoord) * vec4(ored, ogreen, oblue, 1.0);
	if (outputColor.a == 0.0)
		discard;
	// outputColor = vec4(ored, ogreen, oblue, 1.0);
}
